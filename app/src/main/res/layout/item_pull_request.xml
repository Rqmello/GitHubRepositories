<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_git_hub_repositories_item_pull_request_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_git_hub_repositories_item_pull_request_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(TÃ­tulo do pull request)" />

    <TextView
        android:id="@+id/tv_git_hub_repositories_item_pull_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_git_hub_repositories_item_pull_request_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_git_hub_repositories_item_pull_request_title"
        app:layout_constraintTop_toTopOf="@id/tv_git_hub_repositories_item_pull_request_title"
        tools:text="(00/00/0000)" />

    <TextView
        android:id="@+id/tv_git_hub_repositories_item_pull_request_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:lines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_git_hub_repositories_item_pull_request_title"
        tools:text="(Body Pull Request)" />

    <ImageView
        android:id="@+id/iv_git_hub_repositories_item_pull_request_avatar_url"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_git_hub_repositories_item_pull_request_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_git_hub_repositories_item_pull_request_body"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_git_hub_repositories_item_pull_request_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_git_hub_repositories_item_pull_request_avatar_url"
        app:layout_constraintTop_toTopOf="@id/iv_git_hub_repositories_item_pull_request_avatar_url"
        tools:text="Username" />

    <TextView
        android:id="@+id/tv_git_hub_repositories_item_pull_request_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_git_hub_repositories_item_pull_request_avatar_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_git_hub_repositories_item_pull_request_avatar_url"
        tools:text="Nome e sobrenome" />

</androidx.constraintlayout.widget.ConstraintLayout>